<%= title 'Segmentos', link_to('Novo Segmento', new_product_type_path) %>

<table id='product_types' class='display is-datatable'>
  <thead>
    <tr>
      <th>Nome</th>
    </tr>
  </thead>

  <tbody>
  <% @product_types.each do |product_type| %>
    <tr>
      <td>
        <%= product_type.name %> 
        <%= link_to 'Editar', edit_product_type_path(product_type), class: 'float-right' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>