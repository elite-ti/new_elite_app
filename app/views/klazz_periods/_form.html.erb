<%= simple_form_for([@klazz, @period]) do |f| %>
  <%= f.error_notification %>

  <div class='form-inputs'>
    <%= f.association :teacher, label_method: :nickname,
      collection: @period.available_teachers %>

    <%= f.association :subject_thread, 
      collection: @period.available_subject_threads %>

    <%= f.association :klazz_type %>

    <% if @period.past? %>
      <%= f.association :absence_reason %>
    <% end %>

    <%= f.hidden_field :date %>
    <%= f.hidden_field :position %>
  </div>

  <div class='form-actions'>
    <%= f.button :submit %>
  </div>

  <div class='form-links'>
    <% if @period.future? %>
      <%= link_to 'Destroy', [@klazz, @period], class: 'destroy_link',
        confirm: 'Are you sure?', method: :delete %>
    <% end %>
  </div>
<% end %>
