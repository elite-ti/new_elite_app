<%= title 'Calendário' %>

<table id="students" class="display is-datatable-desc">
  <thead>
    <tr>
      <th>Data Aplicação</th>
      <th>Prova</th>
      <th>Ações</th>
    </tr>
  </thead>

  <tbody>
  <% @exam_executions.sort_by(&:datetime).reverse.each do |exam_execution| %>
    <tr>
      <td><%= print_date(exam_execution.datetime.to_date) %></td>
      <td>
        <%= exam_execution.full_name %>
      </td>
      <td>
        <span style='float: right;'>
          <%= link_to( 'Upload', new_card_processing_path(exam_execution_id: exam_execution.id), :target => '_blank' )%>
          | <%= link_to 'Cartões', new_student_exam_path(format: :pdf, exam_execution_id: exam_execution.id), :target => '_blank' %>
          <!-- | <%= link_to 'Presença', new_card_processing_path, :target => '_blank'%> -->
        </span>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>