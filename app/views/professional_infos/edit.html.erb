<%= title 'Professional Info' %>

<%= simple_form_for(@teacher, url: professional_info_path(@teacher)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :graduated, as: :radio_buttons, wrapper_html: { id: "teacher_graduated" } %>
    <%= f.association :major %>
    <%= f.input :institute, placeholder: "Ex: UFRJ" %>
    <%= f.input :bachelor, as: :radio_buttons %>
    <%= f.input :cref, as: :radio_buttons %>
    <%= f.input :time_teaching, placeholder: "Ex: 10 anos" %>

    <%= f.simple_fields_for :professional_experiences do |builder| %>
      <%= render 'professional_experience_fields', f: builder %>
    <% end %>
    <p class="add_field"><%= link_to_add_fields "Add", f, :professional_experiences %></p>

    <%= f.input :post_graduated, as: :radio_buttons, wrapper_html: { id: "teacher_post_graduated" } %>
    <%= f.input :post_graduated_comment, label: 'Comment' %>

    <%= f.association :subjects %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
