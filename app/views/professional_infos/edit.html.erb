<%= title 'Informações Profissionais' %>

<%= simple_form_for(@teacher, url: professional_info_path(@teacher)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nickname, label: 'Nome de Guerra', disabled: true %>
    <%= f.input :has_tablet, as: :radio_buttons, collection: [['Sim', true], ['Não', false]], label: 'Possui tablet?' %>
    <%= f.input :graduated, as: :radio_buttons, collection: [['Sim', true], ['Não', false]], wrapper_html: { id: "teacher_graduated" }, label: 'Graduado' %>
    <%= f.association :major, label: 'Graduação' %>
    <%= f.input :institute, placeholder: "Ex: UFRJ", label: 'Instituição' %>
    <%= f.input :bachelor, as: :radio_buttons, collection: [['Sim', true], ['Não', false]], label: 'Bacharelado' %>
    <%= f.input :cref, as: :radio_buttons, collection: [['Sim', true], ['Não', false]], label: 'Possui CREF?', inner_html: {title: "this is my tooltip"} %>
    <%= f.input :time_teaching, placeholder: "Ex: 10 anos", label: 'Tempo de magistério' %>    

    <% if false %>
      <%= f.simple_fields_for :professional_experiences do |builder| %>
        <%= render 'professional_experience_fields', f: builder %>
      <% end %>
      <p class="add_field"><%= link_to_add_fields "Add", f, :professional_experiences %></p>
      <%= f.input :post_graduated, as: :radio_buttons, wrapper_html: { id: "teacher_post_graduated" } %>
      <%= f.input :post_graduated_comment, label: 'Comment' %>
    <% end %>

    <%= f.association :subjects, label: 'Disciplinas' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Próximo' %>
  </div>
<% end %>
