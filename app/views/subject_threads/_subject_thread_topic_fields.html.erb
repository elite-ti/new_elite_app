<fieldset>
  <div class='input'>
    <%= f.label :topic_id %>
    <%= f.select :topic_id, Topic.all.collect {|x| [x.name, x.id]} %>
  </div>

  <div class='input'>
    <%= f.label :weight %>
    <%= f.text_field :weight %>
  </div>

  <%= f.hidden_field :_destroy %>
  <%= link_to "remove", '#', class: "remove_fields" %>
</fieldset>
