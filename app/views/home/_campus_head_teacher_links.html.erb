  <% if !current_employee.operator? %>
    <div class='section'>
      <h2>Bolsão</h2>
        <div class='link'><%= link_to 'Calendário - Bolsão', exam_executions_path(filter_by: 'is_bolsao') %></div>
        <div class='link'><%= link_to 'Candidatos', students_path(is_bolsao: true) %></div>
    </div>
  <% end %>
