<%= f.input :name, placeholder: "Nome completo, sem abreviações" %>

<%= f.input :address, :as => :string, placeholder: "Coloque seu endereço aqui" %>
<%= f.input :suburb, placeholder: "Coloque seu bairro aqui" %>
<%= f.input :city, placeholder: "Coloque sua cidade aqui" %>
<%= f.input :state, as: :select, collection: Person::STATES %>

<%= f.input :personal_email, placeholder: "Coloque seu email pessoal aqui" %>

<%= f.input :identification, placeholder: "Número do RG" %>
<%= f.input :expeditor, placeholder: "Orgão Exp." %>
<%= f.input :cpf, placeholder: "Apenas números" %>

<%= f.input :cellphone, placeholder: "Apenas números",
  input_html: { class: "telephone_input" } %>
<%= f.input :alternative_cellphone, placeholder: "Apenas números",
  input_html: { class: "telephone_input" } %>
<%= f.input :telephone, placeholder: "Apenas números",
  input_html: { class: "telephone_input" } %>
  <%= f.input :alternative_telephone, placeholder: "Apenas números",
  input_html: { class: "telephone_input" } %>
<%= f.input :contact_telephone, placeholder: "Apenas números",
  input_html: { class: "telephone_input" } %>
<%= f.input :contact_name, placeholder: "Ex.: Mãe" %>

<div id="image">
  <%= image_tag(@person.photo_url(:thumb)) if @person.photo? %>
  <%= f.input :photo, wrapper_html: { id: "photo_wrapper" } %>
  <% if @person.photo? %>
    <label id="remove_label"><%= f.check_box :remove_photo %><%= t(:remove) %></label>
  <% end %>
</div>