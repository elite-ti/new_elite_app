<%= title 'Campuses', link_to('New Campus', new_campus_path) %>

<table id='campuses' class='display is-datatable'>
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
  <% @campuses.each do |campus| %>
    <tr>
      <td>
        <%= campus.name %>
        <%= content_tag :span, class: 'float-right' do 
          link_to('Time Table', campus_klazz_period_path(campus)) + 
          ' | ' + 
          link_to('Edit', edit_campus_path(campus))
        end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>