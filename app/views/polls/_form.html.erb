<%= simple_form_for(@poll) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>

    <div class='input'>
      <label>Classes</label>
      <%= f.select :klazz_ids, Klazz.all.collect {|x| [x.name, x.id]}, {}, 
        { multiple: true } %>
    </div>
  </div> 

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
