<%= simple_form_for(@student) do |f| %>
  <%= f.error_notification %>

  <div class='form-inputs'>
    <h2>Info</h2>
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :ra %>
    <% if @student.ra > 1000000 %>
    <% end %>


    <h2>Contact</h2>
    <%= f.input :telephone, as: :telephone %>
    <%= f.input :cellphone, as: :telephone %>
    <%= f.input :previous_school %>

    <h2>Documents</h2>
    <%= f.input :cpf %>
    <%= f.input :own_cpf %>
    <%= f.input :rg %>
    <%= f.input :rg_expeditor %>

    <h2>General</h2>
    <%= f.input :gender, collection: Employee::GENDERS %>
    <%= f.input :date_of_birth, as: :date %>
    <%= f.input :number_of_children %>
    <%= f.input :mother_name %>
    <%= f.input :father_name %>

    <h2>Address</h2>
    <%= f.simple_fields_for :address do |builder| %>
      <%= render 'addresses/fields', f: builder %>
    <% end %>

    <h2>Applied Super Klazzes</h2>
    <%= f.association :applied_super_klazzes, 
        collection: SuperKlazz.all,
        label_method: :label_method %>

    <h2>Enrolled Super Klazzes</h2>
    <%= f.association :enrolled_super_klazzes, 
      collection: SuperKlazz.all,
      label_method: :label_method %>
  </div>

  <div class='form-actions'>
    <%= f.button :submit , confirm: 'Student changes.Are you sure?' %>
  </div>
<% end %>
