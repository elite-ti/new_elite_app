<%= title 'Klazzes', 
  (link_to('New Klazz', new_klazz_path) if can?(:create, Klazz)) %>

<table id="klazzes" class="display is-datatable">
  <thead>
    <tr>
      <th>Name</th>
      <th>Campus</th>
      <th>Year</th>
      <th>Product</th>
      <th>Product Type</th>
    </tr>
  </thead>

  <tbody>
  <% @klazzes.each do |klazz| %>
    <tr>
      <td>
        <%= klazz.name %>
        <span class='float-right'>
          <%= link_to 'Show', klazz %>
          <% if can?(:update, klazz) %>
            | <%= link_to 'Edit', edit_klazz_path(klazz) %>
          <% end %>
        </span>
      </td>
      <td><%= klazz.campus.name %></td>
      <td><%= klazz.product_year.name %></td>
      <td><%= klazz.product_year.product.name %></td>
      <td><%= klazz.product_year.product.product_type.name %></td>
    </tr>
  <% end %>
  </tbody>
</table>