<%= simple_form_for(@exam) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :datetime %>
    <%= f.association :exam_cycle %>

    <div class='input'>
      <%= f.label :subject_ids, 'Subjects' %>
      <%= f.collection_select :subject_ids, Subject.order(:name), :id, :name, 
        { include_blank: true }, { multiple: true } %>
    </div>

    <%= f.input :options_per_question %>
    <%= f.input :correct_answers %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
