<%= simple_form_for(@exam) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :formatted_datetime, input_html: { class: 'datetime' } %>
    <%= f.association :exam_cycle %>
    <%= f.association :subjects %>
    <%= f.association :questions, label_method: :stem %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
