<%= simple_form_for(@exam) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :datetime %>
    <%= f.association :exam_cycle %>
    <%= f.association :subjects %>

    <% if @exam.new_record? %> 
      <%= f.input :options_per_question %>
      <%= f.input :correct_answers %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
