<%= simple_form_for(@exam) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :date %>
    <%= f.association :exam_cycle %>
    <%= f.association :subjects, input_html: { class: 'is-chosen' } %>
    <%= f.association :questions, input_html: { class: 'is-chosen' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
