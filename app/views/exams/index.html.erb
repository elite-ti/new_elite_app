<%= title 'Exams', link_to('New Exam', new_exam_path) %>

<table id='exams' class='display is-datatable'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Exam cycle</th>
    </tr>
  </thead>

  <tbody>
  <% @exams.each do |exam| %>
    <tr>
      <td>
        <%= exam.name %>
        <span class='float-right'>
          <%= link_to 'Show', exam %> |
          <%= link_to 'Edit', edit_exam_path(exam) %>
        </span>
      </td>
      <td><%= exam.date %></td>
      <td><%= exam.exam_cycle_id %></td>
    </tr>
  <% end %>
  </tbody>
</table>
