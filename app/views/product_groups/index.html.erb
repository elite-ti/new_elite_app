<%= title 'Product Groups', link_to('New Product Group', new_product_group_path) %>

<table id='product_groups' class='display is-datatable'>
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
  <% @product_groups.each do |product_group| %>
    <tr>
      <td>
        <%= product_group.name %>
        <%= link_to 'Edit', edit_product_group_path(product_group), class: 'float-right' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
