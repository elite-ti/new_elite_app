<%= title 'Years', link_to('New Year', new_year_path) %>

<table id="years" class="display is-datatable">
  <thead>
    <tr>
      <th>Number</th>
      <th>Start date</th>
      <th>End date</th>
    </tr>
  </thead>

  <tbody>
  <% @years.each do |year| %>
    <tr>
      <td>
        <%= year.number %> 
        <%= link_to 'Edit', edit_year_path(year), class: 'float-right' %>
      </td>
      <td><%= print_date(year.start_date) %></td>
      <td><%= print_date(year.end_date) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
