<%= title 'Years', link_to('New Year', new_year_path) %>

<table id='years' class='display is-datatable'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Product</th>
      <th>Product Type</th>
    </tr>
  </thead>

  <tbody>
  <% @years.each do |year| %>
    <tr>
      <td>
        <%= year.name %>
        <%= link_to 'Edit', edit_year_path(year), class: 'float-right' %>
      </td>
      <td><%= year.product.name %></td>
      <td><%= year.product.product_type.name %></td>
    </tr>
  <% end %>
  </tbody>
</table>
