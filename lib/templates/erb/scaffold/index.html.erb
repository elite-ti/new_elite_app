<%%= title '<%= plural_table_name.humanize.split(' ').map(&:capitalize).join(' ') %>' %>

<table id="<%= plural_table_name %>" class="display">
  <thead>
    <tr>
    <%- attributes.each do |attribute| -%>
      <th><%= attribute.name.humanize %></th>
    <%- end -%>
    </tr>
  </thead>

  <tbody>
  <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
    <tr>
    <%- attributes.each do |attribute| -%>
      <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
    <%- end -%>
    </tr>
  <%% end %>
  </tbody>
</table>

<br />

<%%= link_to 'New <%= singular_table_name.humanize.split(' ').map(&:capitalize).join(' ') %>', new_<%= singular_table_name %>_path %>
